<Window x:Class="WpfApplication1.POS.DayClose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1.POS"
        mc:Ignorable="d"
        Title="DayClose" Height="300" Width="300" WindowState="Maximized">
    <Grid Width="600">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Date" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" Height="60" ></Label>
        <DatePicker Grid.Column="1" Grid.Row="1" Height="60"></DatePicker>

        <Label Content="Cash In Hand" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" Height="60" ></Label>
        <TextBox Grid.Column="1" Grid.Row="2" Height="60" ></TextBox>
        <Button Content="Confirm" Grid.Column="1" Grid.Row="3" Height="60" Width="250" Click="Button_Click"></Button>
        <Button Content="Exit" Grid.Column="1" Grid.Row="4" Height="60" Width="250" Click="Button_Click_1"></Button>

    </Grid>
</Window>
